RewriteEngine On

# Перенаправление всех запросов на app.py
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^(.*)$ app.py [QSA,L]

# Настройки для статических файлов
<FilesMatch "\.(css|js|png|jpg|jpeg|gif|ico|svg)$">
    ExpiresActive On
    ExpiresDefault "access plus 1 month"
</FilesMatch>

# Защита системных файлов
<FilesMatch "\.(py|pyc|log|json)$">
    Order Allow,Deny
    Deny from all
</FilesMatch>

# Разрешить доступ к app.py
<Files "app.py">
    Order Allow,Deny
    Allow from all
</Files>
